@model Tutorial.MyClasses.PriceRecord

@{
    ViewBag.Title = "EditPriceRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditPriceRecord</h2>


@using (Html.BeginForm("SaveEditedPriceRecord", "PriceRecords", FormMethod.Post, new { onsubmit = "return validateSaveEditedPRForm()" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PriceRecord</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PriceRecordId)

        <div class="form-group">
            @Html.LabelFor(model => model.LookupCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LookupCode, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.LookupCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" name="oldLookupCode" value=@Model.LookupCode />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to PriceRecords", "PriceRecordsIndex", new { @page = 1 }, htmlAttributes: new { })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
