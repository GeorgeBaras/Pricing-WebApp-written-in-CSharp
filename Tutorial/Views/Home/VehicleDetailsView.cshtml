@model Tutorial.MyClasses.PriceRecord

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@ViewBag.Title</h4>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Mileage</th>
                <th>Valuation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var priceBand in Model.getPriceBands())
            {
                <tr>
                    <td>@priceBand.PriceBandId</td>
                    <td>@priceBand.Mileage</td>
                    <td>@priceBand.Valuation</td>
                </tr>
            }
        </tbody>
        </table>
</div>

<h3>Recalculate your vehicle's value based on its corresponding pricebands: </h3>
<p>
    @Html.ActionLink("Click to recalculate","ValueRecalculation", new { Model.LookupCode } )
    <br />
    @Html.ActionLink("Back to List", "Valuation")
</p>
